

<div class="min-h-full flex-column justify-center py-12 px-4 sm:px-6 lg:px-8">
<div class="min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <%= image_tag "bundle-logo.svg", class: "mx-auto h-16 w-auto"  %>
</div>
<div class="min-h-full flex items-center justify-center">
<div class="max-w-lg rounded overflow-hidden border-solid border-2 border-slate-100 py-10 px-12 bg-white">
  <div class="max-w-md w-full space-y-6">
    <div>
      <h2 class="mt-2 text-xl font-extrabold text-gray-900">
        Reset your password
      </h2>
    </div>
    <form class="mt-8 space-y-6" action="/users" method="POST">
      <%= token_tag nil %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div class="content-start">
          <label for="email-address" class="py-4">Type in your account's email address</label>
          <input id="email-address" name="user[email]" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">
        </div>
      </div>
      <div>
        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <!-- Heroicon name: solid/lock-closed -->
            <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </span>
          Reset password
        </button>
      </div>
      <div class="flex items-start">
      <div class="text-xs text-gray-400">
         A password reset link will be sent to your email shortly.
      </div>
    </div>
    </form>
  </div>
  </div>
  </div>
</div>
